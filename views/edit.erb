<form method="post" action="/students/<%=@student.id%>" >

  <label for="first-name">Forename: </label>
  <input id="first-name" type="text" name="first_name" value="<%= @student.first_name %>">
  <label for="last-name">Surname: </label>
  <input id="last-name" type="text" name="last_name" value="<%= @student.last_name %>">
  <label for="age">Age: </label>
  <input id="age" type="number" name="age" value="<%= @student.age %>">
<label for="house_select">Select House: </label>
<select name="house_id" id="house_select">
  <option value="1" selected= <%= "selected" if @student.house_id == "1" %>>Gryffindor</option>
  <option value="2" selected= <%= "selected" if @student.house_id == "2" %>>Hufflepuff</option>
  <option value="3" selected= <%= "selected" if @student.house_id == "3" %>>Ravenclaw</option>
  <option value="4" selected= <%= "selected" if @student.house_id == "4" %>>Slytherin</option>
</select>
<input type="submit" value="Edit me!">
</form>
